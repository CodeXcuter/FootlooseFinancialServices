@model FootlooseFS.Models.Person

<h4>
    @Model.FirstName @Model.LastName
    &nbsp;&nbsp;
    <button type="button" class="btn btn-default" onclick="closeEdit()">Back</button>
</h4>

<ul class="nav nav-tabs">
    <li class="active"><a href="#person" data-toggle="tab">Person</a></li>
    <li><a href="#account" data-toggle="tab">Account</a></li>
    <li><a href="#login" data-toggle="tab">Login</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane active" id="person" style="margin:5px;">
        @Html.Partial("PersonEdit", Model)
    </div>
    <div class="tab-pane" id="account" style="margin:5px;">
        @Html.Partial("AccountsEdit", Model.Accounts)
    </div> 
    <div class="tab-pane" id="login" style="margin:5px;">
        @Html.Partial("LoginEdit", Model.Login)
    </div>    
</div>